<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#75e353">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="#058e00"

        app:popupTheme="@style/PopupOverLay"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="GARAGE                 "
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:textColor="#000000"
        android:drawableLeft="@drawable/garage"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:text="HOUSE TEMPERATURE                 "
        android:id="@+id/button2"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/house"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:text="OUTSIDE WEATHER                 "
        android:id="@+id/button3"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:layout_alignEnd="@+id/button2"
        android:drawableLeft="@drawable/weather"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
