<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jae.cst2335_final_project.Microwave">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/microwave_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/microwavetimetxt"
        android:hint="@string/enter_time"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_below="@+id/microwave_timer"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/start_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/microwave_startbutton"
        android:layout_below="@+id/microwavetimetxt"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/stop_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/microwave_stop_button"
        android:enabled="false"
        android:layout_below="@+id/microwavetimetxt"
        android:layout_toEndOf="@+id/AddAppliance" />



    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/microwave_timer"
        android:visibility="invisible"
        android:max="100"
        android:layout_below="@+id/microwave_name"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_timer"
        android:enabled="false"
        android:id="@+id/microwaveResetButton"
        android:layout_alignTop="@+id/microwave_startbutton"
        android:layout_toEndOf="@+id/microwave_startbutton" />


</RelativeLayout>
