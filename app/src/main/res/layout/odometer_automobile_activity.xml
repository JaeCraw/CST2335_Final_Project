<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="#27e737"

        app:popupTheme="@style/PopupOverlay"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >
        <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#ffffff" /></android.support.v7.widget.Toolbar>

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/odometer"
        android:id="@+id/textView15"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#fb0707" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="40000"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:background="#f9d675" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tripA"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150    "
        android:id="@+id/textView18"
        android:textSize="40dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:background="#f6b5b5"
        android:layout_toStartOf="@+id/button12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Oil Change:"
        android:id="@+id/textView19"
        android:layout_below="@+id/button12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        android:id="@+id/textView20"
        android:textSize="40dp"
        android:background="#f6b5b5"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/textView18"
        android:background="@drawable/buttonproperties1"
        android:layout_alignEnd="@+id/button13" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oil Change"
        android:id="@+id/button13"
        android:layout_alignTop="@+id/textView20"
        android:background="@drawable/buttonproperties1"
        android:layout_alignEnd="@+id/textView36" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km"
        android:id="@+id/textView21"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView16"
        android:layout_toEndOf="@+id/textView15" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/button13"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Oil Change Required. . . "
        android:id="@+id/textView36"
        android:textColor="#f90808"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentStart="true" />


</RelativeLayout>