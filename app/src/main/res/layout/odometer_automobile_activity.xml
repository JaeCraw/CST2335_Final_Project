<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="#27e737"

        app:popupTheme="@style/PopupOverlay"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >
        <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="#ffffff" /></android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ODOMETER"
        android:id="@+id/textView15"
        android:textColor="#f70404"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/toolbar" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip A:"
        android:id="@+id/textView16"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView15"
         />



    <TextView
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView18"
        android:textColor="#000000"
        android:background="#377be9"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="0.11"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView17"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip B:"
        android:id="@+id/textView17"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView22"
         />

    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView19"
        android:textColor="#000000"
        android:background="#377be9"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="0.08"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/textView24"
        android:layout_alignEnd="@+id/textView24" />

    <TextView
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView21"
        android:textColor="#000000"
        android:background="#377be9"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="0.11"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView22"
        android:textColor="#000000"
        android:background="#377be9"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="0.11"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView16"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Oil Change:"
        android:id="@+id/textView23"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:text="ODOMETER"
        android:id="@+id/textView24"
        android:textColor="#000000"
        android:background="#c9f90a"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="0.32"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView20"
        android:layout_alignBaseline="@+id/textView24"
        android:layout_alignBottom="@+id/textView24"
        android:layout_alignParentStart="true" />


</RelativeLayout>