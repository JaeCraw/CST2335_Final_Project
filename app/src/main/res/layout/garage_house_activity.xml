<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7fe381"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:background="#00920c"

        app:popupTheme="@style/PopupOverLay"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/garage_title"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="right"
        android:layout_weight="0.23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/garage_door"
        android:id="@+id/textView4"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="@string/garage_open"
        android:id="@+id/button5"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_weight="0.05" />


    <Button
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="@string/garage_close"
        android:id="@+id/button4"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_weight="0.05" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/garage_light"
        android:id="@+id/switch1"
        android:checked="false"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>