<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorOrange">


    <Button
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:text="automobile remote"
        android:id="@+id/automobile_remote"
        android:layout_below="@+id/kitchen_remote"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/drive"
        android:background="@drawable/buttonproperties"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14" />



    <Button
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:text="House Settings"
        android:id="@+id/house_settings"
        android:layout_below="@+id/smart_remote"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/home1"
        android:background="@drawable/buttonproperties"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.12"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:text="Kitchen Smart Remote"
        android:id="@+id/kitchen_remote"
        android:layout_below="@+id/house_settings"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/kitchen"
        android:background="@drawable/buttonproperties"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11" />

    <Button
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:text="@string/livingroomString"
        android:id="@+id/smart_remote"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/room"
        android:background="@drawable/buttonproperties"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.16" />


</LinearLayout>
